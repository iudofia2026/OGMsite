<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <meta name="description" content="<%= typeof meta !== 'undefined' && meta.description ? meta.description : 'OGM - Premium Craft Beverages' %>">
    <meta name="keywords" content="<%= typeof meta !== 'undefined' && meta.keywords ? meta.keywords : 'craft beverages, premium drinks' %>">

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/favicon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon.png">
    <link rel="manifest" href="/site.webmanifest">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Arimo:ital,wght@0,400..700;1,400..700&family=Sail&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Age Verification Modal -->
    <div id="age-verification-modal" class="age-verification-modal">
        <div class="age-verification-background"></div>
        <div class="age-verification-content">
            <h2 class="age-verification-title">Welcome to <span class="ogm-brand">OGM</span></h2>
            <p class="age-verification-question">Are you 21 or older?</p>
            <div class="age-verification-buttons">
                <button id="age-yes-btn" class="age-btn age-btn-yes">Yes</button>
                <button id="age-no-btn" class="age-btn age-btn-no">No</button>
            </div>
            <p class="age-verification-disclaimer">You must be of legal drinking age to enter this site.</p>
        </div>
    </div>

    <div id="main-content" class="main-content-hidden">
        <%- body %>

        <!-- Navigation Overlay -->
        <nav id="nav-overlay" class="nav-overlay">
            <div class="nav-container">
                <button class="nav-close" aria-label="Close navigation">
                    <span class="nav-close-line"></span>
                    <span class="nav-close-line"></span>
                </button>

                <div class="nav-content">
                    <div class="nav-logo">
                        <img src="/images/ogm_full_square_logo.svg" alt="OGM" />
                    </div>

                    <ul class="nav-links">
                        <li class="nav-item">
                            <a href="/" class="nav-link" data-nav="home">
                                <span class="nav-text">Home</span>
                                <span class="nav-indicator"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#about" class="nav-link" data-nav="about">
                                <span class="nav-text">About</span>
                                <span class="nav-indicator"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/products" class="nav-link" data-nav="products">
                                <span class="nav-text">Products</span>
                                <span class="nav-indicator"></span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#contact" class="nav-link" data-nav="contact">
                                <span class="nav-text">Contact</span>
                                <span class="nav-indicator"></span>
                            </a>
                        </li>
                    </ul>

                    <div class="nav-footer">
                        <p class="nav-tagline">Premium Craft Beverages</p>
                        <div class="nav-social">
                            <a href="#" class="nav-social-link" aria-label="Instagram">Instagram</a>
                            <a href="#" class="nav-social-link" aria-label="Twitter">Twitter</a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>

    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>

    <!-- Development utilities (only load in dev mode) -->
    <% if (process.env.NODE_ENV === 'development') { %>
    <script src="/js/gsap-dev-utils.js"></script>
    <% } %>

    <!-- Custom JavaScript -->
    <script src="/js/ageVerification.js"></script>
    <script src="/js/navigation.js"></script>
    <script src="/js/heroBackground.js"></script>
    <script src="/js/animations.js"></script>
    <script src="/js/auth.js"></script>
</body>
</html>